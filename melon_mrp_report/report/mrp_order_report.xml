<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="print_mrp_order_report">
            <t t-call="web.html_container">
                <t t-set="i" t-value="0"/>
                <t t-call="web.internal_layout">
                    <t t-foreach="docs" t-as="doc_id">
                        <div class="page" style="padding-top:5px">
                            <style type="text/css">
                                .tabledata{
                                border:1px soild #000;
                                }
                                .gxtr >td{
                                text-align:left;
                                border-bottom: 1px solid #000;
                                border-right: 1px solid #000;
                                border-left: 1px solid #000;
                                border-top: 1px solid #000;
                                font-size:14px;
                                }
                                .herdtd{
                                word-wrap:break-word;width:22%;font-size:14px;
                                }
                            </style>
                            <table class="tabledata" style="width:100%;margin-top:10px">
                                <t t-set="i" t-value="i+1"/>
                                <thead>
                                    <tr class="gxtr">
                                        <td rowspan="3"
                                            style="width:20%;text-align:center;vertical-align:middle;height:100">
                                            <img t-if="i%2==0"
                                                 t-att-src="'/report/barcode/?type=QR&amp;value=%s&amp;width=80&amp;height=80' % (doc_id.name)"
                                            />
                                            <!--                                            <img t-if="i%2==0"-->
                                            <!--                                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', doc_id.name, 360, 60)"-->
                                            <!--                                                 style="text-align:left"/>-->
                                        </td>
                                        <td style="width:30%">
                                            <span style="color:#000">生产单:</span>
                                        </td>
                                        <td style="width:30%">
                                            <span t-field="doc_id.name"/>
                                        </td>
                                        <td rowspan="3"
                                            style="width:20%;text-align:center;vertical-align:middle;height:100">
                                            <img t-if="i%2!=0"
                                                 t-att-src="'/report/barcode/?type=QR&amp;value=%s&amp;width=80&amp;height=80' % (doc_id.name)"
                                            />
                                        </td>
                                    </tr>
                                    <tr class="gxtr">
                                        <td style="width:30%">
                                            <span style="color:#000">产品:</span>
                                        </td>
                                        <td style="width:30%">
                                            <span t-field="doc_id.product_id.name"/>
                                        </td>
                                    </tr>
                                    <tr class="gxtr">
                                        <td style="width:30%">
                                            <span style="color:#000">数量:</span>
                                        </td>
                                        <td style="width:30%">
                                            <span t-field="doc_id.product_qty"/>
                                        </td>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>