<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="demo_user_download_tree_view" model="ir.ui.view">
            <field name="name">demo.user.tree</field>
            <field name="model">demo.user</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="sex"/>
                </tree>
            </field>
        </record>


        <record id="view_demo_user_form" model="ir.ui.view">
            <field name="name">demo.user.form</field>
            <field name="model">demo.user</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="age"/>
                                <field name="sex"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>