<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record model="ir.ui.view" id="inherit_purchase_order_melon_form">
        <field name="name">purchase.order.melon.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field name="project_id"/>
            </field>
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                <field name="model"/>
            </xpath>
            <field name="partner_ref" position="attributes">
                <attribute name="string">订单描述</attribute>
            </field>
        </field>
    </record>



    <record model="ir.ui.view" id="inherit_view_partner_tree_melon_1">
        <field name="name">purchase.order.melon.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="project_id" optional="show"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="inherit_view_partner_tree_melon_kpis">
        <field name="name">purchase.order.melon.kpis.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="project_id" optional="show"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="inherit_view_partner_melon_search">
        <field name="name">purchase.order.melon.kpis.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="project_id"/>
            </field>
            <filter name="vendor" position="after">
                <filter string="项目" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>
            </filter>
        </field>
    </record>

    <record model="ir.ui.view" id="inherit_view_partner_filter_search">
        <field name="name">purchase.order.melon.filter.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="project_id"/>
            </field>
            <filter name="vendor" position="after">
                <filter string="项目" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>
            </filter>
        </field>
    </record>


</odoo>
