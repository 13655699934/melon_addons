<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_application_version_tree" model="ir.ui.view">
        <field name="name">版本管理</field>
        <field name="model">melon.application.version</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="set_published" type="object" string="发布"/>
                    <button name="set_current_version" type="object" string="设为当前版本"/>
                </header>
                <field name="create_date" string="创建时间"/>
                <field name="app_id"/>
                <field name="version_code"/>
                <field name="app_size"/>
                <field name="is_published"/>
                <field name="is_current_version"/>
                <field name="create_uid" string="创建人"/>
            </tree>
        </field>
    </record>
    <record id="view_application_version_form" model="ir.ui.view">
        <field name="name">版本管理</field>
        <field name="model">melon.application.version</field>
        <field name="arch" type="xml">
            <form>
                <style type="text/css">
                    .o_form_view .o_group .o_group_col_6 {
                    display: inline-block;
                    width: 47%;
                    vertical-align: top;
                    }
                </style>
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="app_id" required="1"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="create_date" string="创建时间"/>
                        </group>
                        <group>
                            <field name="qr_code" filename="image_name" widget="image" options="{'size': [120, 120]}"
                                   required="1"/>
                            <field name="image_name" invisible="1"/>
                        </group>
                    </group>
                    <group string="基础配置">
                        <group>
                            <field name="name"/>
                            <field name="version_code"/>
                            <field name="app_size"/>
                            <field name="package_name"/>
                        </group>
                        <group>
                            <field name="upgrade_style" widget="radio"/>
                            <field name="specify_version_id" options='{"no_create": True}'/>
                            <field name="start_cond" widget="radio"/>
                            <field name="upgrade_time"
                                   attrs="{'invisible': [('start_cond','!=','inverse')],'required': [('start_cond','=','inverse')]}"/>
                            <field name="qr_code_url" readonly="1"/>
                        </group>
                    </group>
                    <group string="版本管理">
                        <group>
                            <field name="is_published" widget="radio"/>
                        </group>
                        <group>
                            <field name="is_current_version" widget="radio"/>
                        </group>
                    </group>
                    <group string="升级内容">
                        <field name="upgrade_text"/>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_application_version" model="ir.actions.act_window">
        <field name="name">版本管理</field>
        <field name="res_model">melon.application.version</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                版本管理
            </p>
        </field>
    </record>

</odoo>

