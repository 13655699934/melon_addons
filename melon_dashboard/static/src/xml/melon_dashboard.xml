<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="melon_dashboard.mo_dashboard">
        <div id="melon_dashboard_dashboard" style="overflow-y:scroll;overflow-x:scroll;">
            <div id="mo_dashboard_main" style="padding-top:10px">
                <t t-call="melon_dashboard.mo_dashboard.block-5"/>
                <t t-call="melon_dashboard.mo_dashboard.block-1"/>
                <t t-call="melon_dashboard.mo_dashboard.block-2"/>
                <t t-call="melon_dashboard.mo_dashboard.block-3"/>
            </div>
        </div>
    </t>

    <t t-name="melon_dashboard.mo_dashboard.block-1">
        <div class="dashboard_block col-lg-12" style="padding-top:10px;">
            <div class="panel-heading" style="padding-top:10px;border-color:#ddd;background-color:#f5f5f5;">
                <h3 class="panel-title">月份销售单数量汇总</h3>
                <div class="pull-right" style="margin-top:-30px;">
                    <input id="dashboard_block1_date" style="text-align:center;"/>
                </div>
            </div>
            <div class="panel-body" style="padding-top:5px;background-color:#FFF;">
                <div id="mo_chart1" style="width:100%;height:300px"/>
            </div>
        </div>
    </t>

     <t t-name="melon_dashboard.mo_dashboard.block-5">
        <div class="dashboard_block col-lg-12" style="padding-top:1px;">
            <div class="panel-heading" style="padding-top:10px;border-color:#ddd;background-color:#f5f5f5;">
                <h3 class="panel-title">节点执行计划</h3>
            </div>
            <div class="panel-body" style="padding-top:5px;background-color:#FFF;">
                <div id="mo_chart5" style="width:100%;height:300px"/>
            </div>
        </div>
    </t>

    <t t-name="melon_dashboard.mo_dashboard.block-2">
        <div class="dashboard_block col-lg-12" style="padding-top:10px;">
            <div class="panel-heading" style="padding-top:10px;border-color:#ddd;background-color:#f5f5f5;">
                <h3 class="panel-title">月份销售金额汇总表</h3>
                <div class="pull-right" style="margin-top:-30px;">
                    <input id="dashboard_block2_date" style="text-align:center;"/>
                </div>
            </div>
            <div class="panel-body" style="padding-top:5px;background-color:#FFF;">
                <div id="mo_chart2" style="width:100%;height:300px"/>
            </div>
        </div>
    </t>

    <t t-name="melon_dashboard.mo_dashboard.block-3">
        <div class="dashboard_block col-lg-12" style="padding-top:10px;">
            <div class="panel-heading" style="padding-top:10px;border-color:#ddd;background-color:#f5f5f5;">
                <h3 class="panel-title">订单分类</h3>
                <div class="pull-right" style="margin-top:-30px;">
                    <input id="dashboard_block3_date" style="text-align:center;"/>
                </div>
            </div>
            <div class="panel-body" style="padding-top:5px;background-color:#FFF;">
                <div id="mo_chart3" style="width:100%;height:300px"/>
            </div>
        </div>
    </t>



</templates>