<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="inherit_stock_valuation_layer_tree1" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <field name="value" position="before">
                <field name="standard_price" widget='monetary'/>
            </field>
        </field>
    </record>


      <record id="inherit_stock_valuation_layer_form1" model="ir.ui.view">
        <field name="name">stock.valuation.layer.form</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_form"/>
        <field name="arch" type="xml">
            <field name="remaining_qty" position="before">
                <field name="standard_price" widget='monetary'/>
            </field>
        </field>
    </record>
</odoo>