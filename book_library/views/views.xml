<odoo>
    <data>
        <!--        列表视图-->
        <record model="ir.ui.view" id="book_library.list">
            <field name="name">book_library list</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <tree default_order='date desc'>
                    <field name="name"/>
                    <field name="display_name"/>
                    <field name="author"/>
                    <field name="date"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <!--        搜索视图-->
        <record id="view_melon_book_search" model="ir.ui.view">
            <field name="name">melon.book.search</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <search string="Search book">
                    <field name="name"/>
                    <field name="display_name" string="书名或作者"
                           filter_domain="['|', ('name', 'ilike', self), ('author', 'ilike', self)]"/>
                    <field name="author"/>
                    <field name="date"/>
                    <filter string="售罄" name="sell_out" domain="[('state', '=', 'sell_out')]"/>
                    <filter string="下架" name="lower_shelf" domain="[('state', '=', 'lower_shelf')]"/>
                    <filter name="图书状态" string="state" domain="[]" context="{'group_by':'state'}"/>
                    <separator/>
                    <filter string="在售" name="on_sale" domain="[('state', '=', 'on_sale')]"/>
                    <separator/>
                </search>
            </field>
        </record>

        <!--        看板视图-->
        <record id="melon_book_kanban" model="ir.ui.view">
            <field name="name">图书看板视图</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="author"/>
                    <templates>
                        <t t-name="kanban-box">
                            <field name="image_128" class="o_kanban_image_fill_left d-block"
                                   options="{'size': [90, 90]}"
                                   widget='image'/>
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <strong class="o_kanban_record_title">
                                        <span>
                                            <t t-esc="record.name.value"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <field name="author"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--        日历视图-->
        <record id="melon_book_view_calendar" model="ir.ui.view">
            <field name="name">melon.book.calendar</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <calendar string="calendar" create="0" mode="month" date_start="date_start"
                          color="author" hide_time="true" event_limit="5">
                    <field name="name"/>
                    <field name="author"/>
                    <field name="date"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!--        graph视图-->
        <record id="melon_book_pie_view" model="ir.ui.view">
            <field name="name">melon.book.graph</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <graph string="Book" type="pie" sample="1">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="state" type="row" string="state (minutes)"/>
                </graph>
            </field>
        </record>


        <!--        pivot视图-->
        <record id="melon_book_pivot_view" model="ir.ui.view">
            <field name="name">melon.book.pivot</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <pivot string="Pipeline" sample="1">
                    <field name="create_date" interval="month" type="col"/>
                    <field name="name" type="col"/>
                    <field name="state" type="row"/>
                    <field name="price" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="melon_book_gantt_views" model="ir.ui.view">
            <field name="name">melon.book.gantt</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <gantt date_stop="write_date" date_start="create_date" string="Operations" default_group_by="name"
                       create="0" delete="0"
                       progress="progress" plan="0"
                       decoration-success="state == 'on_sale'"
                       decoration-warning="state == 'lower_shelf'"
                       color="author"
                       display_unavailability="1"
                       sample="1">
                    <field name="date_start"/>
                    <field name="state"/>
                    <field name="name"/>
                    <field name="price"/>
                    <templates>
                        <div t-name="gantt-popover" class="container-fluid">
                            <div class="row g-0">
                                <div class="col">
                                    <ul class="ps-1 mb-0 list-unstyled">
                                        <li>
                                            <strong>Start Date:</strong>
                                            <t t-out="userTimezoneStartDate.format('L LTS')"/>
                                        </li>
                                        <li>
                                            <strong>Stop Date:</strong>
                                            <t t-out="userTimezoneStopDate.format('L LTS')"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </templates>
                </gantt>
            </field>
        </record>

        <!--        表单视图-->
        <record model="ir.ui.view" id="book_library.form">
            <field name="name">book_library form</field>
            <field name="model">melon.book</field>
            <field name="arch" type="xml">
                <form create_condition="[('state', '=', 'sell_out')]">
                    <header>
                        <button string="售罄" class="oe_highlight" attrs="{'invisible': [('state', '=', 'sell_out')]}"
                                type="object" name="btn_sell_out"/>
                        <button string="下架" class="oe_highlight" attrs="{'invisible': [('state', '=', 'lower_shelf')]}"
                                type="object" name="btn_lower_shelf"/>
                        <button string="上架" attrs="{'invisible': [('state', '=', 'on_sale')]}" type="object"
                                name="btn_on_sale"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="image_128" widget="image" class="oe_avatar"/>
                        <h1>
                            <field name="display_name" readonly="1" nolabel="1"/>
                        </h1>
                        <group>
                            <field name="name" required="1"/>
                            <field name="author" required="1"/>
                            <field name="date"/>
                            <field name="note"/>
                            <field name="price"/>
                            <field name="description"/>
                            <field name="date_start"/>
                            <field name="file" filename="filename"/>
                            <field name="filename" invisible="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="book_library.action_window">
            <field name="name">图书</field>
            <field name="res_model">melon.book</field>
            <field name="view_mode">tree,form,kanban,calendar,graph,pivot,gantt</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_on_sale': 1}</field>
        </record>


        <!-- server action to the one above -->
        <record model="ir.actions.server" id="book_library.action_server">
            <field name="name">图书详情</field>
            <field name="model_id" ref="model_melon_book"/>
            <field name="state">code</field>
            <field name="code">
                action = model.action_open_book_detail()
            </field>
        </record>


        <!-- Top menu item -->
        <menuitem name="西溪图书馆" id="book_library.menu_root" web_icon="book_library,static/description/icon.png"/>

        <!-- menu categories -->
        <menuitem name="图书" id="book_library.menu_1" parent="book_library.menu_root"/>
        <menuitem name="服务" id="book_library.menu_2" parent="book_library.menu_root"/>

        <!-- actions -->
        <menuitem name="图书列表" id="book_library.menu_1_list" parent="book_library.menu_1"
                  action="book_library.action_window"/>
        <menuitem name="图书列表" id="book_library" parent="book_library.menu_2"
                  action="book_library.action_server"/>

    </data>
</odoo>