<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_application_manager_tree" model="ir.ui.view">
        <field name="name">应用管理</field>
        <field name="model">melon.application.manager</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" string="创建时间"/>
                <field name="name"/>
                <field name="app_image" widget="image" options="{'size': [40, 40]}"/>
                <field name="create_uid" string="创建人"/>
            </tree>
        </field>
    </record>

    <record id="view_application_manager_form" model="ir.ui.view">
        <field name="name">应用管理</field>
        <field name="model">melon.application.manager</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="create_date" string="创建时间"/>
                            <field name="name" required="1"/>
                            <field name="appid"/>
                            <field name="appkey"/>
                            <field name="devlop_platform" required="1"/>
                            <field name="app_type" required="1"/>
                        </group>
                        <group>
                            <field name="app_image" filename="image_name" widget="image" options="{'size': [90, 90]}"
                                   required="1"/>
                            <field name="image_name" invisible="1"/>
                            <field name="registration_time" required="1"/>
                            <field name="create_uid" string="创建人"/>
                            <field name="content_type_id"
                                   attrs="{'invisible': [('app_type','!=','software')],'required': [('app_type','=','software')]}"
                                   options='{"no_create": True}'/>
                        </group>
                    </group>
                    <group>
                        <field name="app_description"/>
                    </group>
                </sheet>
                  <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
            </form>
        </field>
    </record>


    <record id="action_application_manager" model="ir.actions.act_window">
        <field name="name">应用管理</field>
        <field name="res_model">melon.application.manager</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                应用管理
            </p>
        </field>
    </record>

</odoo>
