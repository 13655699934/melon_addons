<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- -->
        <record model="ir.ui.view" id="tree_virtual_keyboard">
            <field name="name">keyboard</field>
            <field name="model">virtual.keyboard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!---->
        <record model="ir.ui.view" id="form_virtual_keyboard">
            <field name="name">keyboard</field>
            <field name="model">virtual.keyboard</field>
            <field name="arch" type="xml">
                <form string="">
                     <header>
                        <button name="btn_virtual_keyboard" type="object" string="keyboard" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="virtual_float" widget="float_number_keyboard"/>
                            </group>
                            <group>
                               <field name="virtual_integer" widget="integer_number_keyboard"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_virtual_keyboard" model="ir.actions.act_window">
            <field name="name">keyboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">virtual.keyboard</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_melon_number_keyboard"
                  name="数字键盘"
                  web_icon="melon_number_keyboard,static/description/icon.png"
                  sequence="10"/>

        <menuitem id="menu_virtual_keyboard"
                  name="keyboard"
                  sequence="10"
                  action="action_virtual_keyboard"
                  parent="menu_melon_number_keyboard"/>


    </data>
</odoo>