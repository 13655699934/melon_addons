<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_talent_base_inform" model="ir.ui.view">
            <field name="name">信息采集</field>
            <field name="model">talent.base.inform</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="btn_info_import" string="数据采集" type="object" class="oe_highlight oe_right"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="ID_number"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="graduation_school"/>
                                <field name="major_studied"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="项目信息">
                                <field name="project_info_ids">
                                    <tree editable="bottom">
                                        <field name="code" optional="show"/>
                                        <field name="name" optional="show"/>
                                        <field name="description" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_talent_base_inform" model="ir.ui.view">
            <field name="name">信息采集</field>
            <field name="model">talent.base.inform</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" optional="show"/>
                    <field name="age" optional="show"/>
                    <field name="graduation_school" optional="show"/>
                    <field name="major_studied" optional="show"/>
                    <field name="ID_number" optional="show"/>
                    <field name="company_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="view_talent_base_inform_filter" model="ir.ui.view">
            <field name="name">talent.base.inform.select</field>
            <field name="model">talent.base.inform</field>
            <field name="arch" type="xml">
                <search string="Search modules">
                    <field name="name"/>
                    <field name="ID_number"/>
                    <separator/>
                    <searchpanel>
                        <field name="company_id" string="公司" groups="base.group_multi_company" icon="fa-building"
                               enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>
    </data>
</odoo>