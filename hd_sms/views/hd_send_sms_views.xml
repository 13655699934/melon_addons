<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hd_send_sms_view_tree" model="ir.ui.view">
            <field name="name">hd.send.sms.tree</field>
            <field name="model">hd.send.sms</field>
            <field name="arch" type="xml">
                <tree multi_edit="1">
                    <field name="name"/>
                    <field name="host"/>
                    <field name="port"/>
                </tree>
            </field>
        </record>

        <record id="view_hd_send_sms_form" model="ir.ui.view">
            <field name="name">hd.send.sms.form</field>
            <field name="model">hd.send.sms</field>
            <field name="arch" type="xml">
                <form>
                    <style type="text/css">
                        .o_form_view .o_group.o_inner_group > tbody > tr > td.o_td_label {
                        width: 0%;
                        padding: 0 15px 0 0;
                        min-width: 100px;
                        }
                    </style>
                    <header>
                        <button name="btm_test_sin_sms" string="单条测试连接" type="object"
                                icon="fa-check-circle" style="background-color:red;"
                                attrs="{'invisible': [('type', '=', 'bs_sms')]}"
                                class="oe_highlight"/>
                        <button name="btm_test_batch_sms" string="批量测试连接" type="object"
                                icon="fa-check-circle" style="background-color:red;"
                                attrs="{'invisible': [('type', '!=', 'tpl_sms')]}"
                                class="oe_highlight"/>
                        <button name="btm_test_tpl_sms" string="tpl测试连接" type="object"
                                icon="fa-check-circle" style="background-color:red;"
                                attrs="{'invisible': [('type', '!=', 'tpl_sms')]}"
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="名称"/>
                            </h1>
                        </div>
                        <group string="参数配置">
                            <group>
                                <field name="host" readonly="1"/>
                                <field name="port" readonly="1"/>
                                <field name="apikey" readonly="1"/>
                            </group>
                            <group>
                                <field name="sin_url" readonly="1"/>
                                <field name="batch_url" readonly="1"/>
                                <field name="tpl_url" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group><field name="test_mobile"/></group>
                            <group><field name="type"/></group>
                        </group>
                        <group string="测试内容">
                            <group>
                                <field name="test_content" attrs="{'invisible': [('type', '=', 'tpl_sms')]}"/>
                                <field name="tpl_id" attrs="{'invisible': [('type', '!=', 'tpl_sms')]}"/>
                                <field name="tpl_value" attrs="{'invisible': [('type', '!=', 'tpl_sms')]}" placeholder="{'#usertruename#': usertruename, '#visitwebsite#': visitwebsite}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="备注">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>