<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dynamic_order_tree" model="ir.ui.view">
        <field name="name">测试</field>
        <field name="model">dynamic.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_dynamic_order_form" model="ir.ui.view">
        <field name="name">测试</field>
        <field name="model">dynamic.order</field>
        <field name="arch" type="xml">
            <form condition_edit="state=='停用' or state=='待机'" condition_create="state=='停用'">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dynamic_order" model="ir.actions.act_window">
        <field name="name">测试</field>
        <field name="res_model">dynamic.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_dynamic_order_main"
            name="测试"
            web_icon="dynamic_form_create_edit,static/description/icon.png"
            sequence="1"/>

    <menuitem
            id="menu_dynamic_order"
            name="测试"
            parent="menu_dynamic_order_main"
            action="action_dynamic_order"
            groups="base.group_user"/>
</odoo>

